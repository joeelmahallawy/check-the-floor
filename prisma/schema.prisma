// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Collection {
  id BigInt @id 
  collectionName String
  subcribed SubscribersAndCollections[]
}

model Subscriber {
  id BigInt @id 
  phoneNumber BigInt
  collections SubscribersAndCollections[]
}

model SubscribersAndCollections{
  Subscriber Subscriber @relation(fields: [subscriberID], references: [id])
  subscriberID BigInt 
  Collection Collection @relation(fields: [collectionID],references: [id])
  collectionID BigInt 
  triggerPrice Int
  @@id([collectionID,subscriberID])
}


