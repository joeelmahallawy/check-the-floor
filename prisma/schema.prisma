generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Collection {
  id             BigInt                      @id
  collectionName String
  subcribed      SubscribersAndCollections[]
}

model Subscriber {
  id          BigInt                      @id
  phoneNumber BigInt
  collections SubscribersAndCollections[]
}

model SubscribersAndCollections {
  subscriberID BigInt
  collectionID BigInt
  triggerPrice Float
  Collection   Collection @relation(fields: [collectionID], references: [id])
  Subscriber   Subscriber @relation(fields: [subscriberID], references: [id])

  @@id([collectionID, subscriberID])
}
